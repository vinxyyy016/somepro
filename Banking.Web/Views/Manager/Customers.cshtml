
@model IEnumerable<BankingAppDataAccess.Customer>
@{
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
    ViewBag.Title = "Manage Customers";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold text-primary">Customer Management</h3>
        <a href="@Url.Action("AddCustomer", "Manager")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Customer
        </a>
    </div>

    <table class="table table-hover table-bordered align-middle shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>DOB</th>
                <th>PAN</th>
                <th>Phone</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cust in Model)
            {
                <tr>
                    <td>@cust.CustomerID</td>
                    <td>@cust.CustomerName</td>
                    <td>@cust.DOB</td>
                    <td>@cust.PAN</td>
                    <td>@cust.PhoneNumber</td>
                    <td>
                        <span class="badge @(cust.Status == "Active" ? "bg-success" : "bg-secondary")">
                            @cust.Status
                        </span>
                    </td>
                    <td>
                        <form action="@Url.Action("ChangeCustomerStatus", "Manager")" method="post" class="d-flex align-items-center">
                            @Html.Hidden("custId", cust.CustomerID)
                            <select name="status" class="form-select form-select-sm w-auto me-2">
                                <option value="Pending" @(cust.Status == "Pending" ? "selected" : "")>Pending</option>
                                <option value="Active" @(cust.Status == "Active" ? "selected" : "")>Active</option>
                                <option value="Inactive" @(cust.Status == "Inactive" ? "selected" : "")>Inactive</option>
                            </select>
                            <button type="submit" class="btn btn-sm btn-outline-primary">Save</button>
                        </form>
                    </td>
                    <td>
                        <span class="badge
                            @(cust.Status == "Active" ? "bg-success" :
                              cust.Status == "Pending" ? "bg-warning text-dark" :
                              "bg-secondary")">
                            @cust.Status
                        </span>
                        <a href="@Url.Action("ViewCustomerAccounts", "Manager", new { id = cust.CustomerID })"
                           class="btn btn-sm btn-outline-primary">View Accounts</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info mt-3">@TempData["Message"]</div>
    }
</div>

