<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title | Manager Dashboard</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f6f9;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Top Navbar */
        .navbar {
            background: linear-gradient(90deg, #000428, #004e92);
            color: white;
        }

        .navbar-brand {
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .navbar .btn-logout {
            color: white;
            border-color: #fff;
        }

        .navbar .btn-logout:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 56px;
            left: 0;
            bottom: 0;
            width: 240px;
            background-color: #fff;
            box-shadow: 2px 0 6px rgba(0, 0, 0, 0.1);
            padding-top: 1rem;
            transition: all 0.3s ease;
            z-index: 100;
        }

        .sidebar a {
            display: block;
            color: #333;
            padding: 0.75rem 1.25rem;
            text-decoration: none;
            border-left: 4px solid transparent;
            transition: all 0.2s;
            font-weight: 500;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background-color: #eaf2ff;
            border-left-color: #004e92;
            color: #004e92;
        }

        /* Main content */
        main {
            margin-left: 240px;
            padding: 5rem;
        }

        @@media (max-width: 992px) {
            .sidebar {
                left: -240px;
            }

            .sidebar.active {
                left: 0;
            }

            main {
                margin-left: 0;
            }

            .toggle-btn {
                display: inline-block;
                cursor: pointer;
                margin-right: 10px;
                color: white;
            }
        }

        /* Footer */
        footer {
            text-align: center;
            background: #fff;
            padding: 1rem;
            border-top: 1px solid #e0e0e0;
            color: #777;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <span class="toggle-btn d-lg-none" onclick="toggleSidebar()">☰</span>
            <a class="navbar-brand" href="@Url.Action("Dashboard", "Manager")">🏦 Bank Management System</a>

            <div class="ms-auto d-flex align-items-center">
                <span class="me-3">Welcome, @Session["ManagerUser"]</span>
                <a href="@Url.Action("Logout", "Manager")" class="btn btn-sm btn-outline-light btn-logout">Logout</a>
            </div>
        </div>
    </nav>
    

    <!-- Sidebar -->
    <div class="sidebar" id="sidebarMenu">
        @Html.ActionLink("Dashboard", "Dashboard", "Manager", null, new { @class = "nav-link" })
        @Html.ActionLink("Employees", "Employees", "Manager", null, new { @class = "nav-link" })
        @Html.ActionLink("Customers", "Customers", "Manager", null, new { @class = "nav-link" })
        @Html.ActionLink("Accounts", "Accounts", "Manager", null, new { @class = "nav-link" })
        @Html.ActionLink("Reports", "Reports", "Manager", null, new { @class = "nav-link" })
        <hr />
        @Html.ActionLink("Settings", "Settings", "Manager", null, new { @class = "nav-link" })
    </div>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        &copy; @DateTime.Now.Year Bank Management System | Manager Portal
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            document.getElementById("sidebarMenu").classList.toggle("active");
        }
    </script>
    
</body>
</html>