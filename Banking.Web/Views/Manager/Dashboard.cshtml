@{
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
    ViewBag.Title = "Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-semibold text-primary">Manager Dashboard</h2>
            <p class="text-muted mb-0">Quick overview of your bank’s operations</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 text-white bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width:55px; height:55px;">
                        <i class="bi bi-people-fill fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Total Customers</h6>
                        <h3 class="fw-bold">@ViewBag.TotalCustomers</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 text-white bg-success rounded-circle d-flex align-items-center justify-content-center" style="width:55px; height:55px;">
                        <i class="bi bi-person-badge-fill fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Active Employees</h6>
                        <h3 class="fw-bold">@ViewBag.TotalEmployees</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 text-white bg-warning rounded-circle d-flex align-items-center justify-content-center" style="width:55px; height:55px;">
                        <i class="bi bi-credit-card-2-back-fill fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Active Accounts</h6>
                        <h3 class="fw-bold">@ViewBag.TotalAccounts</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 text-white bg-danger rounded-circle d-flex align-items-center justify-content-center" style="width:55px; height:55px;">
                        <i class="bi bi-cash-coin fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">Pending Loans</h6>
                        <h3 class="fw-bold">@ViewBag.TotalLoans</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
